{
  "name": "flow-webpack-plugin",
  "version": "0.3.5",
  "description": "A webpack plugin allowing to call Flow type checker during each webpack compilation.",
  "main": "dist/index.js",
  "scripts": {
    "ls-files": "file_name=$(npm pack | tail -n 1) && tar -ztf $file_name && rm $file_name",
    "pretest": "npm run test-lint && npm run make",
    "test": "node --harmony node_modules/.bin/jest",
    "premake": "npm run lint && flow",
    "make": "mkdir -p dist && rm -rf dist/* && flow-remove-types --pretty --out-dir dist/ src/",
    "prepublish": "npm run test",
    "lint": "eslint src",
    "test-lint": "eslint test"
  },
  "keywords": [
    "webpack",
    "flow",
    "plugin",
    "flowtype"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/happylynx/flow-webpack-plugin.git"
  },
  "author": "happylynx",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.13.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "flow-bin": "^0.37.4",
    "flow-remove-types": "^1.1.2",
    "jest-cli": "^18.1.0"
  }
}
