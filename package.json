{
  "name": "flow-webpack-plugin",
  "version": "0.2.2",
  "description": "Webpack plugin allowing to call `flow` type checker.",
  "main": "dist/index.js",
  "scripts": {
    "ls-files": "file_name=$(npm pack | tail -n 1) && tar -ztf $file_name && rm $file_name",
    "test": "echo \"Error: no test specified\" && exit 1",
    "premake": "flow",
    "make": "mkdir -p dist && rm -rf dist/* && flow-remove-types src/index.js > dist/index.js",
    "prepublish": "npm run make"
  },
  "keywords": [
    "webpack",
    "flow",
    "plugin",
    "flowtype"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/happylynx/flow-webpack-plugin.git"
  },
  "author": "happylynx",
  "license": "MIT",
  "devDependencies": {
    "flow-bin": "^0.37.4",
    "flow-remove-types": "^1.1.2"
  }
}
